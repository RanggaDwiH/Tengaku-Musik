<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_background_color">#212121</item>
        <item name="md_color_content">@color/white</item>
        <item name="md_color_title">@color/white</item>
        <item name="android:navigationBarColor">#1b1b1b</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">#fbfbfb</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fbfbfb</item>
        <item name="android:textColorSecondary">#80fbfbfb</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PlayerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="md_background_color">#212121</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="md_color_content">@color/white</item>
        <item name="md_color_title">@color/white</item>
    </style>

    <style name="NameStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="PlainTextStyle">
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">textPersonName</item>
    </style>
</resources>
